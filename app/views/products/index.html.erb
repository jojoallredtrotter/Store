<div class="container">
  <h1>List of Products</h1>
  <div class="row">
    <% @products.each do |product| %>
      <div class = "col-md-4">
      

          <h1><%= product.name %></h1>
          <h2><%= number_to_currency(product.price) %></h2>
          <p><%= product.description %></p>
          <p><%= product.category %></p>
          <%= image_tag product.avatar.url(:medium) %>
          
          <div>
            <%= link_to 'Show', product, class: "btn btn-default" %>
            <%= link_to 'Edit', edit_product_path(product), class: "btn btn-default"  %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"  %>
          </div>
      </div>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Product', new_product_path %>
